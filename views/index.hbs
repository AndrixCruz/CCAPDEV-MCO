<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Reviews - Reviews</title>
    <link rel="stylesheet" href="design.css">
    <script src="index.js"></script>
    <style>
        .review-info {
            display: none;
            padding: 10px;
        }
        .establishment-card {
            display: flex;
            flex-direction: row;
            align-items: center;
            margin-bottom: 20px;
        }
        .establishment-card img {
            width: 100px;
            height: 100px;
            margin-right: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <div class="container">
                <div class="nav-links">
                    <div id="gitna">
                        <div id="logo">Restaurant Reviews</div>
                        <div id="resto" class="currentPage"><a href="/">•Home•</a></div>
                        <div id="login"><a href="/login">•Logout•</a></div>
                        <div id="profilePic"><a href="/user"></a></div>
                        <div id="info"><a href="/user" id="usernameLink" style="padding-left: 10px;"></a></div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <section class="hero">
        <div class="container">
            <h2>Welcome to Restaurant Reviews</h2>
            <p>Discover the best restaurants in your area and share your dining experiences with others.</p>
            <textarea id="search" name="search" rows="1" cols="50" placeholder="Search for restaurants..."></textarea>
    </section>

    <section class="featured-restaurants">
        <div class="container">
            <div id="title"><h2>List of Profiles</h2></div>

            {{#each }}

            <!-- Beast Burger -->
            <div class="restaurant-card" style="justify-content: center;">
                <div style="display: flex; flex-direction: column; align-items: center;">
                    <img src="MrBeast.png" alt="Beast Burger" style="margin-bottom: 10px;">
                    <h3 style="text-align: center; margin-bottom: 10px;">Beast Burger</h3>
                    <div class="review-toggle">
                        <button class="btn" onclick="redirectToCompanyProfile(beastUser)">More</button>
                    </div>
                </div>
            </div>

            <!-- Kalsada Burger -->
            <div class="restaurant-card" style="justify-content: center;">
                <div style="display: flex; flex-direction: column; align-items: center;">
                    <img src="Kalsada.png" alt="Kalsada Burger" style="margin-bottom: 10px;">
                    <h3 style="text-align: center; margin-bottom: 10px;">Kalsada Burger</h3>
                    <div class="review-toggle">
                        <button class="btn" onclick="redirectToCompanyProfile(kalsadaUser)">More</button>
                    </div>
                </div>
            </div>

            <!-- Burger King -->
            <div class="restaurant-card" style="justify-content: center;">
                <div style="display: flex; flex-direction: column; align-items: center;">
                    <img src="BurgerKing.png" alt="Burger King" style="margin-bottom: 10px;">
                    <h3 style="text-align: center; margin-bottom: 10px;">Burger King</h3>
                    <div class="review-toggle">
                        <button class="btn" onclick="redirectToCompanyProfile(bkUser)">More</button>
                    </div>
                </div>
            </div>

            <!-- Zark's -->
            <div class="restaurant-card" style="justify-content: center;">
                <div style="display: flex; flex-direction: column; align-items: center;">
                    <img src="Zarks.png" alt="Zark's" style="margin-bottom: 10px;">
                    <h3 style="text-align: center; margin-bottom: 10px;">Zark's</h3>
                    <div class="review-toggle">
                        <button class="btn" onclick="redirectToCompanyProfile(zarksUser)">More</button>
                    </div>
                </div>
            </div>

            <!-- Wendys -->
            <div class="restaurant-card" style="justify-content: center;">
                <div style="display: flex; flex-direction: column; align-items: center;">
                    <img src="Wendys.png" alt="Tinuhog ni Benny" style="margin-bottom: 10px;">
                    <h3 style="text-align: center; margin-bottom: 10px;">Wendy's</h3>
                    <div class="review-toggle">
                        <button class="btn" onclick="redirectToCompanyProfile(wendysUser)">More</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>